<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapperPUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN""http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd"><mapper namespace="CommoditiesConfig">	<select id="getCommoditiesConfig" parameterType="java.util.Map"		resultType="CommoditiesConfig">		select * from ec_commodities_config order by id;	</select>		<select id="getCommoditiesConfigById" parameterType="int" resultType="CommoditiesConfig">		select * from ec_commodities_config where id = #{id};	</select>		<insert id="addCommoditiesConfig" parameterType="CommoditiesConfig">	insert into ec_commodities_config (minIntegral,maxIntegral) values (#{minIntegral},#{maxIntegral});	</insert>		<update id="updateCommoditiesConfig" parameterType="CommoditiesConfig">		update ec_commodities_config set minIntegral = #{minIntegral},maxIntegral = #{maxIntegral} where id = #{id};	</update>		<delete id="deleteCommoditiesConfig" parameterType="int">		delete from ec_commodities_config where id = #{id};	</delete></mapper>