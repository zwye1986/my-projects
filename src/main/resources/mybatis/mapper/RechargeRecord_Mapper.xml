<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapperPUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN""http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd"><mapper namespace="EC_RechargeRecord">	<resultMap type="rechargeRecord" id="rechargeRecordResult"		extends="base.BaseEntity.baseEntityResult">		<result column="serialNumber" property="serialNumber" />		<result column="dateTime" property="dateTime" />		<result column="status" property="status" />		<result column="ipAddress" property="ipAddress" />		<result column="amount" property="amount" />		<result column="balance" property="balance" />		<result column="description" property="description" />		<result column="userid" property="userId" />	</resultMap>			<resultMap type="rechargeRecord" id="userRecharegeRecordMap" extends="rechargeRecordResult">	   <collection property="user" ofType="com.venada.efinance.pojo.User.User" select="getUserByUserId" column="userid"/> 	</resultMap>		<!--  获取user对象  -->      <select id="getUserByUserId" parameterType="String" resultMap="com.venada.efinance.pojo.User.userMap">	SELECT		eu.id,		eu.mobileNumber,		eu.nickName,		eu.name		FROM ec_user eu	WHERE eu.id  = #{id}      </select> 		<sql id="Base_Column_List">		id, serialNumber, datetime, status, ipAddress, amount,		createBy,		createTime, modifyBy,		modifyTime, orderBy,		userid,balance,description	</sql>	<select id="getRechargeRecords" resultMap="rechargeRecordResult"		parameterType="java.util.Map">		select		<include refid="Base_Column_List" />		from ec_recharge_record where userid = #{userid} order by datetime desc	</select>		<select id="queryRechargeRecordsByMobilePhone" resultMap="rechargeRecordResult" >		select * from ec_recharge_record where 1=1 and  userid = #{userid}  			 order by datetime desc		 <if test="limitCount != null and ''!=limitCount">		<![CDATA[ 		 limit #{limitIndex},#{limitCount}		 ]]>		</if>	</select>			<select id="countTodayRechargeAmountByUserid" parameterType="String" resultType="java.math.BigDecimal">		select sum(amount) from `ec_recharge_record` t  where t.`status` = 0  and DATE_FORMAT(t.`datetime`,'%Y-%m-%d') = DATE_FORMAT(now(),'%Y-%m-%d') and t.`userid` =  #{userid};	</select>		<select id="findRechargeRecordBySerialNumber" resultMap="rechargeRecordResult"		parameterType="java.lang.String">		select		<include refid="Base_Column_List" />		from ec_recharge_record where serialNumber = #{serialNumber}	</select>	<select id="getRechargeRecordsCount" resultType="int"		parameterType="java.util.Map">		<![CDATA[			select count(*) from ec_recharge_record where userid = #{userid}		]]>	</select>	<select id="getAllRechargeRecords" resultMap="userRecharegeRecordMap"		parameterType="java.util.Map">		select		<include refid="Base_Column_List" />		from ec_recharge_record 			<trim prefix="where " prefixOverrides="and ">				<if test="userId != null">					and userid = #{userId}				</if>		      	<if test="serialNumber != null">					and serialNumber = #{serialNumber}				</if>				<if test="status != null">					and status = #{status}				</if>				<if test="actionStartTime != null">					and dateTime > #{actionStartTime}				</if>				<if test="actionEndTime != null">				<![CDATA[					and dateTime < #{actionEndTime} 					]]>				</if>		    </trim>		     order by datetime desc	</select>		<select id="getRechargeRecordsForIndex" resultMap="userRecharegeRecordMap">		select		<include refid="Base_Column_List" />		from ec_recharge_record where status = 0					     order by datetime desc limit 100	</select>    <select id="getAllRechargeRecordsCount" resultType="int"            parameterType="java.util.Map">        select count(*) from ec_recharge_record        <trim prefix="where " prefixOverrides="and ">            <if test="userId != null">                and userid = #{userId}            </if>            <if test="serialNumber != null">                and serialNumber = #{serialNumber}            </if>            <if test="status != null">                and status = #{status}            </if>            <if test="actionStartTime != null">                and dateTime > #{actionStartTime}            </if>            <if test="actionEndTime != null">                <![CDATA[					and dateTime < #{actionEndTime}					]]>            </if>        </trim>    </select>	<select id="getAllRechargeRecordsCountForIPN" resultType="int"		parameterType="java.util.Map">			select count(1) from ec_recharge_record 			<trim prefix="where " prefixOverrides="and ">		      	<if test="serialNumber != null">					and serialNumber = #{serialNumber}				</if>				<if test="status != null">					and status = #{status}				</if>		    </trim>  for update	</select>		<insert id="addRechargeRecord" parameterType="rechargeRecord">		insert into ec_recharge_record		<trim prefix="(" suffix=")" suffixOverrides=",">			<if test="id != null">				id,			</if>			<if test="serialNumber != null">				serialNumber,			</if>			<if test="dateTime != null">				dateTime,			</if>			<if test="status != null">				status,			</if>			<if test="ipAddress != null">				ipAddress,			</if>			<if test="amount != null">				amount,			</if>			<if test="createBy != null">				createBy,			</if>			<if test="createTime != null">				createTime,			</if>			<if test="modifyBy != null">				modifyBy,			</if>			<if test="modifyTime != null">				modifyTime,			</if>			<if test="orderBy != null">				orderBy,			</if>			<if test="userId != null">				userid,			</if>			<if test="balance != null">				balance,			</if>			<if test="description != null">				description,			</if>		</trim>		<trim prefix="values (" suffix=")" suffixOverrides=",">			<if test="id != null">				#{id},			</if>			<if test="serialNumber != null">				#{serialNumber},			</if>			<if test="dateTime != null">				#{dateTime},			</if>			<if test="status != null">				#{status},			</if>			<if test="ipAddress != null">				#{ipAddress},			</if>			<if test="amount != null">				#{amount},			</if>			<if test="createBy != null">				#{createBy},			</if>			<if test="createTime != null">				#{createTime},			</if>			<if test="modifyBy != null">				#{modifyBy},			</if>			<if test="modifyTime != null">				#{modifyTime},			</if>			<if test="orderBy != null">				#{orderBy},			</if>			<if test="userId != null">				#{userId},			</if>			<if test="balance != null">				#{balance},			</if>			<if test="description != null">				#{description},			</if>		</trim>	</insert>		<select id="getRechargeAmountByUserId" parameterType="String"		resultType="java.math.BigDecimal">		select sum(amount) amount from ec_recharge_record where		userid = #{userid} and status='0';	</select>		<update id="updateRechargeRecordStatus" parameterType="String">		<![CDATA[ 		    update ec_recharge_record set status = '0'  where serialNumber = #{serialNumber} and status <> '0';		]]>	</update>    <select id="queryRechargeRecordsForMobile" resultMap="rechargeRecordResult" parameterType="java.util.Map">        select * from ec_recharge_record t , ec_user t1 where t.userid = #{userid} and t1.password = #{password} and t.userid = t1.id order by t.datetime desc limit #{begin} , #{end}    </select></mapper>