<%@ page language="java" contentType="text/html; charset=utf-8"	pageEncoding="utf-8"%><%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%><%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%><link href="${ctx }/css/malldetial.css" rel="stylesheet" /><script type="text/javascript" src="${ctx }/js/ec_alert.js"></script><script type="text/javascript" src="${ctx }/js/cloud-zoom.1.0.2.min.js"></script><script type="text/javascript">	$(document).ready(function() {		$(".btn-slide").click(function() {			$("#panel").slideToggle("slow");			$(this).toggleClass("active");			return false;		});		$("#userReg").click(function() {			$("#panel").slideToggle("slow");			$(this).toggleClass("active");			return false;		});				$(".tb-stock").click(function(){			var c = $("#J_IptAmount").val();						if(isNaN(c) || c < 1){				$("#J_IptAmount").val(1);			}else{				if(c > 1){					$("#J_IptAmount").val(c-1);				}			}		});				$(".tb-increase").click(function(){			var c = $("#J_IptAmount").val();						if(isNaN(c) || c < 1){				$("#J_IptAmount").val(1);			}else{				c = parseInt(c);				$("#J_IptAmount").val(c+1);			}		});							$(".duiBtn").click(function(){			var c = $("#J_IptAmount").val();			if(isNaN(c) || c < 1){				top.$.alerts.alert("兑换数量只能为数字！");				return;			}			if($("#dmobilePhone").val()!=$("#mobilePhone").val()){				top.$.alerts.alert("两次填写的手机号码不一致");		     	return ;		     	}			$.ajax({                cache: false,                async: true,                type: "POST",                url: $("#mainForm").attr("action"),                data:$("#mainForm").serialize(),// 你的formid                                error: function(request) {                	top.$.alerts.alert("请求失败，请重试！");                },                success: function(data) {                    if(data.resCode == 0){                    	top.$.alerts.alert(data.resMsg);                    	return;                    }else if(data.resCode == 1){                		top.$.alerts.alert(data.resMsg);                		window.location.href="${ctx}/user/credits/obtainlist.html?type=over";                	}else if(data.resCode == 2){                		window.location.href="${ctx}/login";                	}else if(data.resCode == 3){                		top.$.alerts.alert(data.resMsg);                		window.location.href="${ctx}/user/manager/userDetail";                	}                }            });		});	});</script><div class="content_c">	<div class="content_t">		<div class="content_tl fl">			<div class="demo">				<div class="zoom-section">					<div class="zoom-small-image">						<div id="wrap"							style="top: 0px; z-index: 9999; position: relative;">							<a style="position: relative; display: block;"								href="${ctx }/showPic?id=${list[0].id}" class="cloud-zoom"								id="zoom1" rel="adjustX:10, adjustY:-4"> <img width="400" height="430"								style="display: block;" src="${ctx }/showMediumPic?id=${list[0].id }"								alt=""></a>							<div class="mousetrap"								style="background-image: url(&quot;.&quot;); z-index: 999; position: absolute; width: 400px; height: 430px; left: 0px; top: 0px; cursor: pointer;">							</div>						</div>					</div>					<div class="zoom-desc">						<p>												<c:forEach var="p" items="${list }" >							<a href="${ctx }/showPic?id=${p.id}"								class="cloud-zoom-gallery" title="Red"								rel="useZoom: 'zoom1', smallImage: '${ctx }/showSmallPic?id=${p.id }' ">								<img class="zoom-tiny-image"								src="${ctx }/showMediumPic?id=${p.id}" >							</a>						</c:forEach>						</p>					</div>				</div>				<!--zoom-section end-->			</div>		</div>		<form action="${ctx }/mall/exchange" id="mainForm" method="post">		<div class="content_tr fr">			<h1>				 ${commodity.model }<span>${commodity.remark }</span>			</h1>			<ul class="pro_info_type">				<li><span class="attr">原价：</span>¥${commodity.price }</li>				<li><span class="attr">兑换价：</span> <span class="price">${commodity.integral }</span>					积分</li>				<li>我要兑换：<span> <a class="tb-stock">-</a> 					<input id="J_IptAmount" class="tb-text" value="1" maxlength="8" name="count" type="text" />					<input name="id" type="hidden" value="${commodity.id }"/>${commodityCategory.name}						 <a class="tb-increase">﹢</a>				</span><span class="city_result">库存：${commodity.num }个</span></li>				<c:if test="${commodityCategory.name eq '充值卡'}">					<li>充值的手机号码：						<input id="mobilePhone"  name="mobilePhone" value="${user.mobileNumber}" maxlength="11"  type="text" />						<label style="color:red;">请仔细核对要充值的手机号码</label>					</li>					<li>请确认手机号码：						<input id="dmobilePhone"   value="${user.mobileNumber}" maxlength="11"  type="text" />					</li>				</c:if>				<li>					<div class="buy_btn">						<a class="duiBtn" href="###"></a>					</div>				</li>			</ul>		</div>		</form>		<div class="content_b">			<div class="pro_detail_tab">				<ul class="clearfix">					<li class="cur">礼品总览</li>				</ul>			</div>			<div class="single_article_box">				<p>					${commodity.commodityDesc }				</p>			</div>		</div>	</div></div>