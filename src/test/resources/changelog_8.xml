<?xml version="1.0" encoding="UTF-8"?><databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">	<changeSet id="updateRewardType" author="xupei">	<addColumn tableName="ec_user">			<column name="inviteCodeFromOther" type="varchar(20)"></column>			<column name="inviteCodeSelf" type="varchar(20)" ></column>	</addColumn>		<createTable tableName="ec_invite_benefit">			<column name="id" type="varchar(128)">				<constraints primaryKey="true" nullable="false" />			</column>			<column name="userid" type="varchar(128)">				<constraints nullable="true" />			</column>			<column name="inviteUserId" type="varchar(128)">				<constraints nullable="true" />			</column>			<column name="benefit" type="decimal(16,4)">				<constraints nullable="true" />			</column>						<column name="content" type="varchar(255)">				<constraints nullable="true" />			</column>						<column name="actiontime" type="datetime">				<constraints nullable="true" />			</column>	</createTable>		</changeSet>		<changeSet id="addInvitebenefitConfig" author="hepei">		<sql>		    insert into 			ec_system_config VALUES			('107', '邀请奖励', '0.005', '用户推广邀请下线用户获取奖励');		</sql>				<sql>		   update ec_user t set  t.inviteCodeSelf = ( select ROUND(ROUND(RAND(),6)*1000000));		</sql>				<createIndex tableName="ec_user" indexName="idx_ec_user_invitecodeSelf" unique="true">			<column name="inviteCodeSelf" type="varchar(20)" ></column>		</createIndex>				<createIndex tableName="ec_invite_benefit" indexName="idx_ec_inv_ben_inviteUserId" >			<column name="inviteUserId" type="varchar(128)" ></column>		</createIndex>	</changeSet>		</databaseChangeLog>